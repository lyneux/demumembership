<h1 class="col-xs-10">Area Groups</h1>

<%= link_to "Add New Area Group", new_area_group_path, class: "btn btn-primary pull-right, col-xs-2", style: "margin-top: 20px;"  %>

<table class="table table-condensed">
  <tr>
    <th>Number</th>
    <th>Name</th>
    <th>Description</th>
    <th>Co-ordinator</th>
    <th>Active</th>
    <th>Actions</th>
  </tr>

  <% @area_groups.each do |area_group| %>
    <tr>
      <td><%= area_group.id %></td>
      <td><%= area_group.name %></td>
      <td><%= area_group.description %></td>
      <td><%= area_group.coordinator %></td>
      <td><%= area_group.active %></td>
      <td>
        <%= link_to 'Show', area_group_path(area_group), class: "btn btn-xs btn-primary" %>
        <%= link_to 'Edit', edit_area_group_path(area_group), class: "btn btn-xs btn-default" %>
        <%= link_to 'Destroy', area_group_path(area_group), method: :delete, data: {confirm: 'Are you sure?' }, class: "btn btn-xs btn-default"  %>
      </td>
    </tr>
  <% end %>
</table>


