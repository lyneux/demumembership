<%= form_for @area_group, :html => { :class => "form-horizontal", :role => "form" } do |f| %>
  <% if @area_group.errors.any? %>
  <div id="errorExplanation" class="alert alert-danger" style="padding-top: 0px;">
    <h3><%= pluralize(@area_group.errors.count, "error") %> prohibited this area group from being saved:</h3>
    <ul>
    <% @area_group.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <div class="row">
    <div class="col-xs-12 col-md-6">

      <div class="form-group">
        <%= f.label :name, class: "col-xs-3 control-label" %>
        <div class="col-xs-9"><%= f.text_field :name, class: "form-control", style: "max-width: 200px"  %></div>
      </div>

      <div class="form-group">
        <%= f.label :description, class: "col-xs-3 control-label" %>
        <div class="col-xs-9"><%= f.text_field :description, class: "form-control", style: "max-width: 200px"  %></div>
      </div>

      <div class="form-group">
        <%= f.label :active, class: "col-xs-3 control-label" %>
        <div class="col-xs-9"><%= f.check_box :active, class: "form-control" %></div>
      </div>

      <div class="form-group">
        <%= f.label :coordinator, class: "col-xs-3 control-label" %>
        <div class="col-xs-9"><%= f.collection_select :coordinator, @people, :id, :to_s, {:include_blank => true}, {:class => "form-control", :style => "max-width: 200px"} %></div>
      </div>

      <div class="form-group">
        <div class="col-xs-offset-3 col-xs-9">
          <%= f.submit class: "btn btn-sm btn-primary" %>
        </div>
      </div>

    </div>
  </div>
  
<% end %>

