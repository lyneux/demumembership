<h2>Area Group Details:</h2>
<p>
  <strong>Name:</strong>
  <%= @area_group.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @area_group.description %>
</p>

<p>
  <strong>Active:</strong>
  <%= @area_group.active %>
</p>

<p>
  <strong>Coordinator:</strong>
  <%= @area_group.coordinator %>
</p>

<%= link_to "Edit Area Group", edit_area_group_path(@area_group), class: "btn btn-small btn-primary"  %>

<h2>Members:</h2>

<table class="table table-condensed">
  <tr>
    <th>Number</th>
    <th>Forename</th>
    <th>Surname</th>
  </tr>

  <% @area_group.members.each do |member| %>
    <tr>
   	  <td><%= member.membership_number %></td>
      <td><%= member.forename %></td>
      <td><%= member.surname %></td>
    </tr>
  <% end %>
</table>

