<!DOCTYPE html>
<html>
<head>
  <title>Demumembership</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
</head>
<body>
	<header class="navbar navbar-fixed-top navbar-inverse">
  	<div class="navbar-inner">
    	<div class="container">

        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>

        <div class="container">
          <a class="brand" href="index.html"> <%= image_tag "Logo_40.png" %></a>
        </div>
  		  <%= link_to "demu membership", '#', id: "logo" %>

  			<div class="nav-collapse">
    			<ul class="nav pull-right">
    				<li><%= link_to "Home", controller: "welcome" %></li>
            <% if member_admin? %>
    				  <li><%= link_to "Members", members_path %></li>
            <% end %>
            <% if area_group_admin? %>
    				  <li><%= link_to "Area Groups", controller: "area_groups" %></li>
            <% end %>

            <% if signed_in? %>
              <li><%= link_to "Log out", signout_path, method: "delete" %></li>
            <% else %>
              <li class="dropdown" id="menuLogin">
                <a class="dropdown-toggle" href="#" data-toggle="dropdown" id="navLogin">Login <strong class="caret"></strong></a>
                <div class="dropdown-menu" style="padding:15px;">
                  <%= form_for(:session, url: sessions_path) do |f| %>

                    <%= f.text_field :login, placeholder: "Username"  %>
                    <%= f.password_field :password, placeholder: "Password" %>
                    <%= f.hidden_field :fromnav, :value => "fromnav" %></br>

                    <%= f.submit "Login", class: "btn-primary" %>
                  <% end %>

                </div>
              </li>
            <% end %>

    			</ul>
  			</div>

		  </div>
  	</div>
  </header>

  <div class="container">
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>
		<%= yield %>
    <%= render 'layouts/footer' %>
	</div>
  
</body>
</html>
