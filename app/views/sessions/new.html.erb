<% provide(:title, "Log in") %>
<h1>Sign in</h1>


<%= form_for(:session, url: sessions_path, :html => { :class => "form-horizontal", :role => "form" } ) do |f| %>

		<%= f.label :login, class: "control-label" %>
		<%= f.text_field :login, class: "form-control", style: "max-width: 200px" %>

		<%= f.label :password, class: "control-label" %>
		<%= f.password_field :password, class: "form-control", style: "max-width: 200px" %></br>

		<%= f.submit "Log in", class: "btn btn-large btn-primary" %>
<% end %>